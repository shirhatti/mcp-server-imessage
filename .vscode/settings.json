    "**/dist": true,
    "**/build": true,
    "**/.ipynb_checkpoints": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true
  },
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.tox/**": true,
    "**/htmlcov/**": true,
    "**/*.egg-info/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.ipynb_checkpoints/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/venv/**": true,
    "**/.venv/**": true
  },
  "chat.promptFiles": {
    ".github/prompts": true,
  }
